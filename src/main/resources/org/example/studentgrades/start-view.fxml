<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.text.Text?>

<?import java.net.URL?>
<BorderPane prefHeight="430.0" prefWidth="780.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            styleClass="root">

   <!-- Cargar CSS -->
   <stylesheets>
      <URL value="@styles/login.css"/>
   </stylesheets>

   <top>
      <VBox spacing="6" styleClass="header" BorderPane.alignment="CENTER">
         <padding>
            <Insets top="18" right="24" bottom="10" left="24"/>
         </padding>
         <Text text="INICIO DE SESIÓN" styleClass="title"/>
         <Text text="Introduce tus credenciales para continuar" styleClass="subtitle"/>
      </VBox>
   </top>

   <center>
      <StackPane BorderPane.alignment="CENTER">
         <padding>
            <Insets top="10" right="24" bottom="10" left="24"/>
         </padding>

         <VBox spacing="18" styleClass="card">
            <padding>
               <Insets top="22" right="22" bottom="18" left="22"/>
            </padding>

            <GridPane hgap="14" vgap="16">
               <columnConstraints>
                  <ColumnConstraints minWidth="120" prefWidth="150"/>
                  <ColumnConstraints prefWidth="320" hgrow="ALWAYS"/>
                  <ColumnConstraints minWidth="200" prefWidth="220"/>
               </columnConstraints>

               <Label text="USUARIO" styleClass="field-label"
                      GridPane.rowIndex="0" GridPane.columnIndex="0"/>
               <TextField fx:id="userField" promptText="Ej: abollo"
                          styleClass="field"
                          GridPane.rowIndex="0" GridPane.columnIndex="1"/>

               <Label text="CONTRASEÑA" styleClass="field-label"
                      GridPane.rowIndex="1" GridPane.columnIndex="0"/>
               <PasswordField fx:id="passField" promptText="••••••••"
                              styleClass="field"
                              GridPane.rowIndex="1" GridPane.columnIndex="1"/>

               <Label text="CARGO" styleClass="field-label"
                      GridPane.rowIndex="2" GridPane.columnIndex="0"/>
               <ComboBox fx:id="roleCombo" promptText="Selecciona un cargo"
                         styleClass="combo"
                         GridPane.rowIndex="2" GridPane.columnIndex="1"/>

               <ImageView fitHeight="140.0" fitWidth="200.0" preserveRatio="true"
                          styleClass="logo"
                          GridPane.rowIndex="0" GridPane.columnIndex="2" GridPane.rowSpan="3">
                  <Image url="@../../../images/logo.png"/>
               </ImageView>
            </GridPane>

         </VBox>
      </StackPane>
   </center>

   <!-- Botonera inferior -->
   <bottom>
      <BorderPane styleClass="footer" BorderPane.alignment="CENTER">
         <padding>
            <Insets top="10" right="24" bottom="18" left="24"/>
         </padding>

         <left>
            <Button fx:id="loginButton" text="ENTRAR"
                    defaultButton="true"
                    styleClass="btn-primary"/>
         </left>

         <right>
            <HBox spacing="10" alignment="CENTER_RIGHT">
               <Button fx:id="cleanButton" text="LIMPIAR"
                       styleClass="btn-secondary"/>
               <Button fx:id="exitButton" text="SALIR"
                       cancelButton="true"
                       styleClass="btn-danger"/>
            </HBox>
         </right>
      </BorderPane>
   </bottom>

</BorderPane>