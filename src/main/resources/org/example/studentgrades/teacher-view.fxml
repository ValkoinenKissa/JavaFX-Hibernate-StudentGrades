<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="540" prefWidth="920" styleClass="root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.studentgrades.controllers.TeacherController">

    <stylesheets>
        <URL value="@styles/login.css" />
    </stylesheets>

    <top>
        <VBox spacing="6" styleClass="header">
            <padding>
                <Insets bottom="10" left="24" right="24" top="18" />
            </padding>
            <Text styleClass="title" text="Panel del profesor" />
            <Text fx:id="teacherNameText" styleClass="subtitle" text="Profesor/a: -" />
        </VBox>
    </top>

    <center>
        <HBox spacing="16">
            <padding>
                <Insets bottom="10" left="24" right="24" top="10" />
            </padding>

            <!-- IZQ: tabla alumnos -->
            <VBox spacing="12" styleClass="card" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="16" left="16" right="16" top="16" />
                </padding>

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label styleClass="field-label" text="Módulo:" />
                    <ComboBox fx:id="moduleCombo" prefWidth="420" promptText="Selecciona un módulo" styleClass="field combo" />

                    <Region HBox.hgrow="ALWAYS" />

                    <TextField fx:id="searchField" prefWidth="220" promptText="Buscar alumno..." styleClass="field" />
                </HBox>

                <TableView fx:id="studentsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colStudent" prefWidth="270" text="Alumno/a" />
                        <TableColumn fx:id="colCourse" prefWidth="130" text="Curso" />
                        <TableColumn fx:id="colGroup" prefWidth="100" text="Grupo" />
                        <TableColumn fx:id="colLastGrade" prefWidth="90" text="Última" />
                        <TableColumn fx:id="colAvgGrade" prefWidth="90" text="Media" />
                        <TableColumn fx:id="colCount" prefWidth="80" text="Notas" />
                    </columns>
                </TableView>

                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Button fx:id="refreshButton" styleClass="btn btn-secondary" text="REFRESCAR" />
                    <Button fx:id="logoutButton" styleClass="btn btn-danger" text="CERRAR SESIÓN" />
                </HBox>
            </VBox>

            <VBox prefWidth="300" spacing="12" styleClass="card">
                <padding>
                    <Insets bottom="16" left="16" right="16" top="16" />
                </padding>

                <Text styleClass="title" text="Asignar nota" />

                <Label styleClass="field-label" text="Alumno seleccionado" />
                <Label fx:id="selectedStudentLabel" text="-" wrapText="true" />

                <Separator />

                <Label styleClass="field-label" text="Nota (0 - 10)" />
                <TextField fx:id="gradeField" promptText="Ej: 7.5" styleClass="field" />

                <Label styleClass="field-label" text="Notas/observaciones" />
                <TextField fx:id="notesField" promptText="Ej: Buena evolución" styleClass="field" />

                <HBox spacing="10">
                    <Button fx:id="saveGradeButton" text="GUARDAR NOTA"
                            styleClass="btn btn-primary" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                    <Button fx:id="updateGradeButton" text="ACTUALIZAR"
                            styleClass="btn btn-secondary" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                </HBox>
                <Label fx:id="statusLabel" text="" wrapText="true" />
                <Separator />

                <Text styleClass="subtitle" text="Historial de notas" />

                <TableView fx:id="gradesTable" prefHeight="180" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colGradeValue" prefWidth="70" text="Nota" />
                        <TableColumn fx:id="colGradeNotes" prefWidth="180" text="Observaciones" />
                    </columns>
                </TableView>

                <HBox spacing="10">
                    <Button fx:id="deleteGradeButton" maxWidth="Infinity" styleClass="btn btn-danger" text="ELIMINAR NOTA" HBox.hgrow="ALWAYS" />
                    <Button fx:id="deleteAllGradesButton" maxWidth="Infinity" styleClass="btn btn-secondary" text="BORRAR TODAS" HBox.hgrow="ALWAYS" />
                </HBox>
            </VBox>

        </HBox>
    </center>

</BorderPane>
